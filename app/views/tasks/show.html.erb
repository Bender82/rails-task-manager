<h1><%= @task["title"] %></h1>
<div>
<%= @task["details"] %>
</div>
<div>
  <input type='checkbox' id='<%= @task["title"] %>' name='<%= @task["title"] %>'/>
  <label for='<%= @task["title"] %>'><%= @task["completed"] %></label>
</div>
<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
<%= link_to "Back to list", tasks_path %>
